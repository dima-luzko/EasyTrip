<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfileStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/smart_gothic_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInTransportInfoItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInPriceScreenStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="TextNumberOfDaysOrTripsStyle">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/courier_prime_bold</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextToolbarStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextToUnlimitedOrLimitedPriceStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextUnlimitedAndLimitedItemNameStyle">
        <item name="android:fontFamily">@font/pixograd_medium</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ImageLimitedItemStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginStart">40dp</item>
    </style>

</resources>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/detail_price_transport_corner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/form_for_detail_price_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_detail_price_transport_info"
        style="@style/TextDetailPriceItemStyle"
        android:text="Городские - линии + Трамвай + Автобус экспресс + метро + троллейбус + автоьус"
        app:layout_constraintBottom_toBottomOf="@+id/detail_price_transport_corner"
        app:layout_constraintEnd_toEndOf="@+id/detail_price_transport_corner"
        app:layout_constraintStart_toStartOf="@+id/detail_price_transport_corner"
        app:layout_constraintTop_toTopOf="@+id/detail_price_transport_corner"
        app:layout_constraintVertical_bias="0.485" />



</androidx.constraintlayout.widget.ConstraintLayout>
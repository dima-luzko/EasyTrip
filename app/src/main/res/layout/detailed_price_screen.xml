<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp">

    <View
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/form_for_detail_price_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="transparent"
        android:text="@string/back"
        android:textColor="@color/black"
        app:icon="@drawable/icon_arrow_back"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <TextView
        android:id="@+id/number_in_detail_price"
        style="@style/TextInDetailPriceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="30"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <TextView
        android:id="@+id/text_in_detail_price"
        style="@style/TextInDetailPriceStyle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Суток"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@+id/number_in_detail_price"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <View
        android:id="@+id/form_transport"
        android:layout_width="260dp"
        android:maxWidth="260dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/form_for_detail_price_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.007" />

    <View
        android:id="@+id/form_price"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/form_for_detail_price_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/form_transport"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_price_transport_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/form_transport"
        app:layout_constraintEnd_toEndOf="@+id/form_transport"
        app:layout_constraintStart_toStartOf="@+id/form_transport"
        app:layout_constraintTop_toTopOf="@+id/form_transport" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_price_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/form_price"
        app:layout_constraintEnd_toEndOf="@+id/form_price"
        app:layout_constraintStart_toStartOf="@+id/form_price"
        app:layout_constraintTop_toTopOf="@+id/form_price" />

</androidx.constraintlayout.widget.ConstraintLayout>